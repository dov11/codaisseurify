<%= form_for @artist do |f| %>

<% if @artist.errors.full_messages.any? %>
  <% @artist.errors.full_messages.each do |error_message| %>
    <div class="alert alert-success" role="alert"><%= error_message%> <br /></div>
  <% end %>
<% end %>

<div class="form-group">
  <label>Name</label>
  <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
</div>

<div class="form-group">
  <label>Active since:</label>
  <%= f.date_select :active_since %>
</div>


<div class="form-group">
  <label>Length(s):</label>
  <%= f.number_field :length %>
</div>


  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
