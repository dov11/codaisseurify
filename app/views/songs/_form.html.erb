<%= form_for ([@artist, @song]) do |f| %>

<% if @song.errors.full_messages.any? %>
  <% @song.errors.full_messages.each do |error_message| %>
    <div class="alert alert-success" role="alert"><%= error_message%> <br /></div>
  <% end %>
<% end %>

<div class="form-group">
  <label>Name</label>
  <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
</div>

<div class="form-group">
  <label>Release Date:</label>
  <%= f.date_select :release_date, start_year: 1700, end_year: Date.today.year+1, discard_day: true, default: {day: 1} %>
</div>

<div class="form-group">
  <label>Length(s):</label>
  <%= f.number_field :length %>
</div>


<div class="actions">
  <%= f.submit "Save", class: "btn btn-primary" %>
  <%= link_to "Back to artist songs", artist_path(@artist), class: "btn btn-default" %>
</div>
<% end %>
